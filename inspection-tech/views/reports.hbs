<!doctype html>
<html lang="en" manifest="/offline.appcache">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    {{>loadCSS}}
    {{>loadJS}}
    {{>favicon}}
</head>
<body>
<header role="banner">
    <div class="header_logoContainer">
        <svg class="logoContainer_logo" width="100%" height="100%" viewBox="0 0 59 62" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" style="fill-rule:evenodd;clip-rule:evenodd;stroke-linecap:round;stroke-linejoin:round;stroke-miterlimit:1.41421;"><path d="M55.885,23.65c-2.052,11.307 -1.854,22.075 0,32.446l-3.57,3.471c-14.101,-1.915 -29.62,-1.875 -46.469,0l-3.574,-3.475c1.917,-10.826 1.97,-21.639 0,-32.438l26.806,-21.313l26.807,21.309Z" style="fill:#fffbf3;stroke-width:2.5px;stroke:#fffbf3;"/></svg>
    </div>
    <h1 class="header_pageTitle">Inspection Reports</h1>
    <a href="/logout" class="header_admin">Log Out</a>
    <div class="main_connectionInfo">
        <span class="connectionInfo__internetStatus"></span>
        <span class="connectionInfo__databaseStatus"></span>
    </div>
</header>
<main role="main">
    <div class="main_reportActions">
        <button class="reportActions__create primaryAction">Create New Report</button>
        <button class="reportActions__delete secondaryAction">Delete Report</button>
    </div>
    <div class="main_reportFilter">
        <div class="reportFilter__search">
            <input type="search" title="filter results" placeholder="search your reports">
            <button class=tertiaryAction>Search</button>
        </div>
        <div class="reportFilter__select">
            <select class="select__year" title="select year">
                <!--expected behavior would be to get years that reports have been filed from DB and populate-->
                <option value="2015">2015</option>
            </select>
            <select class="select__month" title="select month">
                <option value="">&mdash;</option>
                <option value="1">January</option>
                <option value="2">February</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </select>
            <select class="select__day" title="select day">
            </select>
        </div>
    </div>
    <div class="main_reportDisplay">
        <table class="reportDisplay_table">
            <thead>
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Address</th>
                <th>Agent</th>
                <th>Customer</th>
                <th>Price</th>
                <th class="table_selectContainer"><input class="table_reportSelect__all" type="checkbox" title="select all reports"></th>
            </tr>
            </thead>
            <tbody class="table_body">
            </tbody>
        </table>
    </div>
</main>
<footer class="footer" role="contentinfo">
    <div class="footer_copyright">
        <ul class="footer_list">
            <li>Site Content and Design is &copy; 2015 Ben Forshey</li>
            <li>User Data is &copy 2015 {{company_name}}</li>
        </ul>
    </div>
</footer>
{{>pouchDB}}
</body>
</html>


