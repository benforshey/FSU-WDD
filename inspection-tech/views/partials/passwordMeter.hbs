<script>
    var meter = document.getElementById('passwordStrength'),
            password = document.getElementById('password'),
            showPassword = document.getElementById('showPassword'),
            requireLength = document.getElementById('requireLength'),
            requireNumber = document.getElementById('requireNumber'),
            requireUpper = document.getElementById('requireUpper'),
            requireLower = document.getElementById('requireLower');

    document.addEventListener('click', function() {
        if (showPassword.checked) {
            password.setAttribute('type', 'text');
        } else {
            password.setAttribute('type', 'password');
        }
    });

    document.addEventListener('input', function(){
        var passwordString = password.value,
                reLength = new RegExp('(.{12,})'),
                reNumber = new RegExp('[0-9]'),
                reUppercase = new RegExp('[A-Z]'),
                reLowercase = new RegExp('[a-z]');

        reLength.test(passwordString) ? requireLength.setAttribute('class', 'requirement_satisfied') : requireLength.setAttribute('class', 'requirement_notSatisfied');
        reNumber.test(passwordString) ? requireNumber.setAttribute('class', 'requirement_satisfied') : requireNumber.setAttribute('class', 'requirement_notSatisfied');
        reUppercase.test(passwordString) ? requireUpper.setAttribute('class', 'requirement_satisfied') : requireUpper.setAttribute('class', 'requirement_notSatisfied');
        reLowercase.test(passwordString) ? requireLower.setAttribute('class', 'requirement_satisfied') : requireLower.setAttribute('class', 'requirement_notSatisfied');

        meter.value = password.value.length;
    });
</script>
