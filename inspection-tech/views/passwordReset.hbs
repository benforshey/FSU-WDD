<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    {{>loadCSS}}
    {{>favicon}}
</head>
<body>
<header role="banner">
    <div class="header_logoContainer">
        <svg class="logoContainer_logo" width="100%" height="100%" viewBox="0 0 59 62" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" style="fill-rule:evenodd;clip-rule:evenodd;stroke-linecap:round;stroke-linejoin:round;stroke-miterlimit:1.41421;"><path d="M55.885,23.65c-2.052,11.307 -1.854,22.075 0,32.446l-3.57,3.471c-14.101,-1.915 -29.62,-1.875 -46.469,0l-3.574,-3.475c1.917,-10.826 1.97,-21.639 0,-32.438l26.806,-21.313l26.807,21.309Z" style="fill:#fffbf3;stroke-width:2.5px;stroke:#fffbf3;"/></svg>
    </div>
    <h1 class="header_pageTitle">Password Recovery</h1>
</header>
<main role="main">
    <form class="form_businessPortal" role="form" action="/portal/password-recovery/reset" method="POST">
        <div class="form_centeringDiv">
            <h2>Reset Your Password</h2>
            <p>Create a new account password to finish your account recovery.</p>
            <div class="form_statusMessage {{messageClass}}">
                {{#each statusMessage}}
                    <p>{{this}}</p>
                {{/each}}
                <div class="passwordRequirements">
                    <ul class="passwordRequirements_list">
                        <li class="requirement_notSatisfied" id="requireLength">12 character minimum length</li>
                        <li class="requirement_notSatisfied" id="requireNumber">at least 1 number</li>
                    </ul>
                    <ul class="passwordRequirements_list">
                        <li class="requirement_notSatisfied" id="requireUpper">at least one uppercase letter</li>
                        <li class="requirement_notSatisfied" id="requireLower">at least one lowercase letter</li>
                    </ul>
                </div>
            </div>
            <div class="form_formBlock">
                <label class="formBlock_label label__inline" for="emailAddress">email address</label>
                <input class="formBlock_input {{emailClass}}" id="emailAddress" name="emailAddress" type="email" value="{{values.emailAddress}}" required aria-required="true">
            </div>
            <div class="form_formBlock">
                <label class="formBlock_label label__inline" for="token">recovery token</label>
                <input class="formBlock_input {{tokenClass}}" id="token" name="token" type="text" value="{{values.token}}" required aria-required="true">
            </div>
            <div class="form_formBlock">
                <label class="formBlock_label label__inline" for="password">new password</label>
                <input class="formBlock_input {{passwordClass}}" id="password" name="password" type="password" value="{{values.password}}" required aria-required="true">
            </div>
            <div class="form_formBlock">
                <label class="formBlock_label" for="passwordStrength">password strength</label>
                <meter class="formBlock_meter" id="passwordStrength" value="0" min="1" max="20" low="12" optimum="13"></meter>
                <input class="formBlock_input input__checkbox" id="showPassword" type="checkbox">
                <label class="formBlock_label label__inline" for="showPassword">show password</label>
            </div>
            <div class="form_formBlock">
                <button class="primaryAction" role="button" type="submit">Finish Recovery</button>
            </div>
        </div>
    </form>
</main>
{{>passwordMeter}}
{{>loadingAnimation}}
</body>
</html>

