        <h1>New City Catechism</h1>
    </div>
    <div class="headerBlock--right">
        <span class="spanHeader h2">Account Login</span>
    </div>
</header>
<main>
    <%- messages() %>
    <% if(typeof errors !== 'undefined' && errors instanceof Array) { %>
    <div class="message">
        <ul class="error">
            <% for (var i = 0, j = errors.length; i < j; i += 1) { %>
            <li>
                <%= errors[i].msg; %>
            </li>
            <% } %>
        </ul>
    </div>
    <% } %>
    <div class="formHeader">
        <h2>Reset Your Account Password</h2>
        <p>Enter your account email address to receive an email with password reset instructions.</p>
    </div>
    <form id="loginForm" action="/account/forgot" method="post" novalidate>
        <div class="formBlock">
            <label class="label input" for="email">email address <span class="label required">(required)</span></label>
            <input id="email" name="email" type="email" placeholder="you@youremail.com"/>
        </div>
        <div class="formBlock">
            <button class="button" type="submit" form="loginForm">Send Reset Email</button>
        </div>
    </form>
</main>
